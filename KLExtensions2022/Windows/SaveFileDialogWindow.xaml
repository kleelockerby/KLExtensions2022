<local:BaseDialogWindow x:Class="KLExtensions2022.SaveFileDialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KLExtensions2022"
             mc:Ignorable="d" 
             Title="Create Class" WindowStartupLocation="CenterScreen" SizeToContent="Width"
             local:VsTheme.UseVsTheme="True"
             d:DesignHeight="450" d:DesignWidth="600" KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel >
            <Grid Margin="6 10 10 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblText" Grid.Column="0"></Label>
                <TextBox Grid.Column="1" x:Name="txtName"></TextBox>
            </Grid>
            <StackPanel Margin="0" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton Name="btnProject" Margin="10,5,0,0" GroupName="NameSpaceType" IsChecked="true">Project</RadioButton>
                <RadioButton Name="btnFolder" Margin="10,5,0,0" GroupName="NameSpaceType">Folder</RadioButton>
            </StackPanel>
        </StackPanel>
        <StackPanel>
            <Grid Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblUsing" Margin="6 20 0 0" Grid.Column="0">Implicity Usings</Label>
                <StackPanel Grid.Column="1" Margin="18 20" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton Name="btnUsingsTrue" Margin="10,5,0,0" GroupName="UsingsType" IsChecked="true">True</RadioButton>
                    <RadioButton Name="btnUsingsFalse" Margin="10,5,0,0" GroupName="UsingsType">False</RadioButton>
                </StackPanel>
            </Grid>
            <StackPanel Margin="6 0"  HorizontalAlignment="Center" Orientation="Horizontal">
                <Button MinWidth="45" Click="Button_Click" Margin="0,0,6,0" >Cancel</Button>
                <Button MinWidth="45" Click="Button_Click_1" Margin="0,0,6,0"  >Ok</Button>
            </StackPanel>
        </StackPanel>
       
        
